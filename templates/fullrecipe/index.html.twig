{% extends 'base.html.twig' %}

{% block title %}Recette complète{% endblock %}

{% block body %}
<div class="d-flex col-md-12">
  <div class="card mb-3">
    <img src="{{ asset('assets/images/Recipes/' ~ recipe.picture)}}" class="card-img" alt="...">
    <div class="card-body">
      <h2 class="card-title">{{recipe.title}}</h2>
      <h3 class="card-text">Description </h3>
      <p>{{recipe.description}}</p>
      <h3 class="card-text">Ingrédients</h3>
      <p>{{recipe.ingredients}}</p>
      <h3 class="card-text">Etapes</h3>
      <p>{{recipe.steps}}</p>
      <p class="card-text"><small class="text-body-secondary">Last updated 3 mins ago</small></p>
    </div>
  </div>
</div>
{% endblock %}
