{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

<section class="container">
       <h1 class="textCenter mb-5 mt-3">Inscription</h1>
        <div class="row d-flex justify-content-center">
            <div class="col-md-5">
                {{ form_start(registrationForm) }}
                <fieldset class="mb-3">
                    <legend>Coordonn√©es du patient</legend>
                    {{ form_row(registrationForm.firstname) }}
                    {{ form_row(registrationForm.lastname) }}
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password'
                    }) }}
                </fieldset>
            </div>
            <div class="col-md-7">
                <fieldset class=" mb-3">
                    <legend>Informations personnelles</legend>
                    <div class="mb-3">{{ form_row(registrationForm.allergenType) }}</div>
                    {{ form_row(registrationForm.dietType) }}
                </fieldset>
            </div>
    </div>
            {#{{ form_row(registrationForm.RGPDConsent) }}#}

            <button type="submit" class="btn my-3">Inscrire</button>
            <a href="{{ path('app_login')}}" class="btn">Me connecter</a>
        {{ form_end(registrationForm) }}
</section>
{% endblock %}
